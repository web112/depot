<!-- START:head -->
<!DOCTYPE html>
<html>
	<head>
		<title>Pragprog Books Online Store</title>

		<!-- START_HIGHLIGHT -->
		<%= stylesheet_link_tag "scaffold" %>
		<%= stylesheet_link_tag "depot", :media => "all" %><!-- <label id ="code.sit"/> -->
		<!-- END_HIGHLIGHT -->
		<%= javascript_include_tag :defaults %>
		<%= csrf_meta_tag %><!-- <label id="code.csrf"/> -->
	</head>
	<!-- END:head -->

	<body id="store">
		<div id="store_main">
			<div id="banner">
				<%= image_tag("logo.png") %>
				<%= @page_title || "pragmatic Bookshelf"%><!-- <label id="code.depot.e.title"/> -->
			</div>
			<div id="search_bar">
				<%= form_tag do %><%= image_tag("search.jpg") %><%= text_field_tag :name, params[:name], :class=>"search_field" %><%= submit_tag "Search", :class => "search_button" %><%end%>
			</div>
			<div id="columns">
				<div id="side">

					<div class = "side_module">
						<div id="cart">
							<% if @cart %>
							<!--<%= hidden_div_if (@cart.line_items.empty?, :id => "cart" ) do %>-->
							<%= render @cart %>
							<!--<% end %>-->
							<% end %>
						</div>
					</div>
					<div class = "side_module">
						<div class="side_title">
							<%= image_tag("bullet.gif") %>&nbsp Navigation bar
						</div>
						<div class="tip">
							<%= image_tag("home.png") %>
							<a href="/">&nbspHome</a>
						</div>
						<div class="tip">
							<%= image_tag("question.png") %>
							<a href="http://www..../frq">&nbspQuestions</a>
						</div>
						<div class="tip">
							<%= image_tag("news.png") %>
							<a href="http://www..../news">&nbspNews</a>
						</div>
						<div class="tip">
							<%= image_tag("contact.png") %>
							<a href="http://www..../contact">&nbspContact</a>
						</div>
					</div>
					<% if session[:user_id] && User.find(session[:user_id]).role == "host" %>
					<% user = User.find(session[:user_id]) %>
					<div class = "side_module">
						<div class="side_title">
							<%= image_tag("account.png") %>&nbsp Account
						</div>
						<div class="tip">
							<%= image_tag("shop.png") %>
							<%= link_to 'My Shop', user.shop %>
						</div>
						<div class="tip">
							<%= image_tag("book.png") %>
							<%= link_to 'My Products', products_url %>
						</div>
						<div class="tip">
							<%= image_tag("order.png") %>
							<%= link_to 'My Orders', orders_path %>
						</div>
						<div class="tip">
							<%= image_tag("colleague.png") %>
							<%= link_to 'My Colleague', users_path %>
						</div>

						<%= button_to 'Logout', logout_path, :method => :delete %>
					</div>
					<%else%>
					<div class="side_title">
						<%= image_tag("account.png") %>&nbsp Account
					</div>
					<div class="tip">
						<%= image_tag("colleague.png") %>
						<%= link_to 'Sign In', login_url %>
					</div>
					<div class="tip">
						<%= image_tag("colleague.png") %>
						<%= link_to 'New Shop', new_shop_url %>
					</div>
					<% end %>
				</div>
				<div id="main">
					<div class="home_page_left">
						<%= yield %><!-- <label id="code.depot.e.include"/> -->
					</div>
					<div class="home_page_right">
						<div class="right_title">
							Index
						</div>
						<h2>literature</h2>
						<h2>Sicience</h2>
						<h2>……</h2>
						<div class="right_title">
							Categorises
						</div>
						<div id="categorises">
							<h2>literature</h2>
							<h2>Sicience</h2>
							<h2>……</h2>
						</div>
					</div>
				</div>
			</div>

			
		</div>
		<div id="foot">
				web-112
		</div>
	</body>
</html>
