<% if line_item == @current_item %>
	<tr id="current_item">
<% else %>
<tr>
<% end %>
	<td>
		<%= line_item.quantity %>&times;
	</td>
	<td>
		<%= truncate(strip_tags(line_item.product.title),
                 :length => 9)%>
		
	</td>
	<td class = "item_price">
		<%= number_to_currency(line_item.total_price) %>
	</td>
	<td>
		<%= link_to 'X', line_item, :method => :delete,:confirm => "Are you sure?", :remote => true%>
	</td>
</tr>

