<%= form_for(@shop, :html => {:multipart => true} ) do |f| %>
<% if @shop.errors.any? %>
<div id="error_explanation">
	<!--<h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>-->

<h2>
	<%= t('errors.template.header', :count=>@shop.errors.size, :model=>t('activerecord.models.shop'))%>
</h2>

	<ul>
		<% @shop.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
	<% end %>
	<% if @user.errors.any? %>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>
			<%= msg %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">
	<label for ="name">
		<%=t('.host')+":"%>
	</label>
	<br />
	<%= text_field_tag :name, params[:name], :size => 40  %>
</div>

<div class="field">
	<label for ="password">
		<%=t('.pwd')+":"%>
	</label>
	<br />
	<%= password_field_tag :password, params[:password] , :size => 40 %>
</div>

<div class="field">
	<label for ="confirm">
		<%=t('.confirm')+":"%>
	</label>
	<br />
	<%= password_field_tag :confirmation, params[:confirmation] , :size => 40 %>
</div>

<div class="field">
	<%= f.label :name,t('.name')+":" %>
	<br />
	<%= f.text_field :name , :size => 40 %>
</div>

<div class="field">
	<%= f.label :email ,t('.email')+":"%>
	<br />
	<%= f.text_field :email , :size => 40 %>
</div>

<div class="field">
	<%= f.label :telephone,t('.telephone')+":"%>
	<br />
	<%= f.text_field :telephone , :size => 40 %>
</div>

<div class="field">
	<%= f.label :image_url,t('.image')+":" %>
	<br />
	<%= f.file_field("uploaded_image")%>
	<br />
</div>

<div class="field">
	<%= f.label :description ,t('.description')+":"%>
	<br />
	<%= f.text_area :description , :size => 10 %>
</div>

<div class="actions">
	<%= f.submit t('.submit')%>
</div>
<% end %>
