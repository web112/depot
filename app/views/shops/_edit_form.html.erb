	<%= f.label :email ,t('.email')+":"%>
	<br />
	<%= f.text_field :email , :size => 40 %>
</div>

<div class="field">
	<%= f.label :telephone,t('.telephone')+":"%>
	<br />
	<%= f.text_field :telephone , :size => 40 %>
</div>

<div class="field">
	<%= f.label :image_url,t('.image')+":" %>
	<br />
	<%= f.file_field("uploaded_image")%>
	<br />
</div>

<div class="field">
	<%= f.label :description ,t('.description')+":"%>
	<br />
	<%= f.text_area :description  %>
</div>


<div class="actions">
	<%= f.submit t('.submit') %>
</div>
<% end %>
