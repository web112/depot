<h1><%= t('.shop_list') %></h1>

<div class="orders_table">
<table>
  <tr>
    <th><%= t('.shop_name') %></th>
    <th><%= t('.show') %></th>
    <th><%= t('.state') %></th>
    <th><%= t('.operation') %></th>
  </tr>

<% @shops.each do |shop| %>
  <tr>
    <td><%= shop.name %></td>
    <td><%= link_to t('.show'), :id => shop.id, :controller => "shops", :action => "show_to_buyers" %></td>
    
    <%
    	operation = ""
    	light_image = ""
    	if shop.state == "open"
    		operation = "close"
    		light_image =  "green_light.png"
    	else 
    	    operation = "open"
    		light_image =  "red_light.png"
    	end
    %>
    
    <td><%=image_tag(light_image, :class => "shop_state")%><%=t('.'+shop.state) %></td>
    <td><%= link_to t('.'+operation), :id => shop.id, :controller => "shops", :action => "change_state"%></td>
  </tr>
<% end %>
</table>
</div>
<br />
<p><%= will_paginate @shops%></p>