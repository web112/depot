<%if flash[:notice]%>
<p id="notice">
	<%= notice %>
</p>
<%end%>
<p>
	<b><%= t('.productlist') %></b>
	<br/>
	<table>
		<% @order.line_items.each do |item| %>
		<tr>
			<td>	<%= item.quantity %>&times;</td>
			<td>	<%= truncate(strip_tags(item.product.title),
			:length => 80)%></td>
			<td class = "item_price">
				<%= number_to_currency(item.total_price) %>
			</td>
		</tr>
		<% end %>
		<tr class="total_line">
		<td colspan="2">
			<%= t('.total') %>
		</td>
		<td class="total_cell">
			<%= number_to_currency(@order.total_price)%>
		</td>
	</tr>
	</table>
	
</p>


<p>
	<b><%= t('.name')%>:</b>
	<%= @order.name %>
</p>

<p>
	<b><%= t('.address')%>:</b>
	<%= @order.address %>
</p>

<p>
	<b><%= t('.email')%>:</b>
	<%= @order.email %>
</p>

<p>
	<b><%= t('.paytype')%>:</b>
	<%= @order.pay_type %>
</p>

<p>
	<b><%= t('.state')%>:</b>
	<%= @order.state %>
</p>

<%= link_to t('.edit'), edit_order_path(@order) %> |
<%= link_to t('.back'), orders_path %>
