<h1>Product List</h1>
<% @products.each do |product| %>
<div class="entry">
	<table>
		<tr>
			<td rowspan="3">	<%= image_tag(product.image_url, :class=>"product_logo ") %></td>
			<td class="product_title">
					<%= link_to product.title.length>30?product.title[0,30]+"...": product.title, 
					:controller=>"products", 
					:action =>"show_to_buyers", 
					:id=>product	 %>
					&nbsp;
					<% (product.rating_sum/(product.rating_times+0.001)).round.times do%>
						<%= image_tag("rating_start.png", :class => "star") %>
					<%end%>
			</td>
		</tr>
		<tr class="product_line">
			<td>(Author)</td>
		</tr>
		<tr>
			<td><%= sanitize product.description %></td>
		</tr>
		<tr>
			<td>
			<div class ="price_line">
				<span class="price"><%= number_to_currency(product.price) %></span>
			</div>
			<div>Type:<%product.book_types.each do |type|%>
				<%=type.name%><%end%>	</div>
			</td>
			<td>
			<%= link_to 'Show', product %>&nbsp;
			<%= link_to 'Edit', edit_product_path(product) %>&nbsp;
			<%= link_to 'Destroy', product,
			:confirm => 'Are you sure?',
			:method => :delete %>
			</td>
		</tr>
	</table>
</div>
<%end%>
<br />

<%= link_to 'New product', new_product_path %>

<p>
	<%= will_paginate @products%>
</p>
