<div class="orders_table">
<h1><%= t('.listuser') %></h1>

<% if notice %>
<p id="notice">
	<%= notice %>
</p>
<%end%>
<table>
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.role') %></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.role %></td>
    <!--<td><%= link_to 'Show', user %></td>-->
    <td><%= link_to t('.edit'), edit_user_path(user) %></td>
    <td><%= link_to t('.destroy'), user, :confirm => t('.areyousure'), :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<br />

<%= link_to t('.newuser'), new_user_path %>
<p><%= will_paginate @users%></p>